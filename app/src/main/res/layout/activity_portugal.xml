<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.PortugalActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Pick the right colors to match the Portuguese flag."
            android:textAppearance="@android:style/TextAppearance.Medium"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_grey_300">

            <ImageView
                android:id="@+id/linesImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/pt_lines"/>

            <ImageView
                android:id="@+id/greenImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/pt_green"/>

            <ImageView
                android:id="@+id/redImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/pt_red"/>

            <ImageView
                android:id="@+id/yellowImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/pt_yellow"/>

            <ImageView
                android:id="@+id/portugal_image_view"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/pt_portugal"/>

        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/colors_view"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/black_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/black"
                    android:onClick="onClick"/>

                <Button
                    android:id="@+id/white_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/white"
                    android:onClick="onClick"/>

                <Button
                    android:id="@+id/red_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/colorMaterialRed500"
                    android:onClick="onClick"/>

                <Button
                    android:id="@+id/orange_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/colorMaterialOrange500"
                    android:onClick="onClick"/>

                <Button
                    android:id="@+id/yellow_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/colorMaterialYellow500"
                    android:onClick="onClick"/>

                <Button
                    android:id="@+id/green_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/colorMaterialGreen500"
                    android:onClick="onClick"/>

                <Button
                    android:id="@+id/blue_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/colorMaterialBlue700"
                    android:onClick="onClick"/>

            </LinearLayout>

        </HorizontalScrollView>

        <Button
            android:id="@+id/next_button"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Next Flag"/>
    </LinearLayout>
</ScrollView>